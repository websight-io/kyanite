{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "header": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "header",
        "label": "Card header"
      },
      "variant": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "heightVariant",
        "label": "Variant",
        "default": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Default (none)",
          "value": "",
          "selected": true
        },
        "fullHeight": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Full height",
          "value": "card--full-height"
        }
      },
      "type": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "type",
        "label": "Type",
        "card": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Card",
          "value": "card"
        },
        "anchor": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Anchor",
          "value": "anchor"
        }
      },
      "container": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "anchorUrl": {
          "sling:resourceType": "wcm/dialogs/components/pathpicker",
          "rootPath": "/content",
          "name": "anchorUrl",
          "label": "Anchor URL"
        },
        "openInNewTab": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "openInNewTab",
          "label": "Open link in a new tab"
        },
        "ws:display": {
          "condition": {
            "sourceName": "type",
            "values": "anchor"
          }
        }
      }
    },
    "imageTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Image",
      "tabs": {
        "sling:resourceType": "wcm/dialogs/components/tabs",
        "defaultTab": {
          "sling:resourceType": "wcm/dialogs/components/tab",
          "label": "Default",
          "imageSource": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "kyanite/common/components/common/imagesource",
              "assetReference": {
                "mimeTypes": ["image/*"],
                "name": "image/assetReference"
              },
              "src": {
                "name": "image/assetReference"
              }
            }
          },
          "image": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "kyanite/common/components/card/common/image"
            }
          },
          "imagePosition": {
            "sling:resourceType": "wcm/dialogs/components/radio",
            "name": "imagePosition",
            "label": "Position",
            "none": {
              "sling:resourceType": "wcm/dialogs/components/radio/option",
              "label": "Top",
              "value": "top"
            },
            "fixed": {
              "sling:resourceType": "wcm/dialogs/components/radio/option",
              "label": "Bottom",
              "value": "bottom"
            }
          }
        },
        "mediaTab": {
          "sling:resourceType": "wcm/dialogs/components/tab",
          "label": "Media",
          "mobileImageSource": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "kyanite/common/components/common/imagesource",
              "imageSrcType": {
                "name": "mobileImageSrcType",
                "label": "Mobile image source type"
              },
              "assetReference": {
                "name": "mobileAssetReference",
                "label": "Choose mobile image",
                "mimeTypes": [
                  "image/*",
                  "video/*"
                ],
                "ws:display": {
                  "condition": {
                    "sourceName": "mobileImageSrcType",
                    "values": "asset"
                  }
                }
              },
              "src": {
                "name": "mobileAssetReference",
                "label": "Choose mobile image",
                "ws:display": {
                  "condition": {
                    "sourceName": "mobileImageSrcType",
                    "values": "link"
                  }
                }
              }
            }
          },
          "tabletImageSource": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "kyanite/common/components/common/imagesource",
              "imageSrcType": {
                "name": "tabletImageSrcType",
                "label": "Tablet image source type"
              },
              "assetReference": {
                "name": "tabletAssetReference",
                "label": "Choose tablet image",
                "mimeTypes": ["image/*", "video/*"],
                "ws:display": {
                  "condition": {
                    "sourceName": "tabletImageSrcType",
                    "values": "asset"
                  }
                }
              },
              "src": {
                "name": "tabletAssetReference",
                "label": "Choose tablet image",
                "ws:display": {
                  "condition": {
                    "sourceName": "tabletImageSrcType",
                    "values": "link"
                  }
                }
              }
            }
          }
        }
      }
    },
    "backgroundImage": {
      "sling:resourceType": "wcm/dialogs/components/include",
      "path": "/libs/kyanite/common/components/common/backgroundimage"
    },
    "footer": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Footer",
      "ws:disallowedContext": ["edit:panel"],
      "urls": {
        "name": "urls",
        "label": "Footer URLs",
        "labelText": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "label",
          "label": "Label"
        },
        "sling:resourceType": "wcm/dialogs/components/multifield",
        "address": {
          "sling:resourceType": "wcm/dialogs/components/pathpicker",
          "name": "address",
          "label": "URL"
        }
      }
    }
  }
}
