{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "isVertical": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "isVertical",
        "checkedByDefault": true,
        "label": "The level is vertical on mobile",
        "description": "If you want the level to be horizontal on mobile as well uncheck that box."
      },
      "addDividers": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "addDividers",
        "label": "Add dividers between items",
        "description": "If should add a vertical dividers between the items"
      },
      "spacing": {
        "sling:resourceType": "wcm/dialogs/components/radio",
        "name": "spacing",
        "label": "Spacing",
        "fluid": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "Fluid",
          "value": ""
        },
        "fixed": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "Fixed",
          "value": "level-with-gaps",
          "selected": true
        }
      },
      "verticalAlignment": {
        "sling:resourceType": "wcm/dialogs/components/radio",
        "name": "verticalAlignment",
        "label": "Vertical Alignment",
        "start": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "start",
          "value": "is-align-items-flex-start",
          "selected": true
        },
        "center": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "center",
          "value": "is-align-items-center"
        },
        "end": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "end",
          "value": "is-align-items-flex-end"
        }
      }
    }
  }
}