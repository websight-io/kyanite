{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "generalTabContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "fixedGridContainer": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "desktopColumnsNumber": {
            "sling:resourceType": "wcm/dialogs/components/numberfield",
            "name": "desktopGridStyle/columnsNumber",
            "label": "Number of columns, desktop",
            "min": 1,
            "max": 12
          },
          "tabletColumnsNumber": {
            "sling:resourceType": "wcm/dialogs/components/numberfield",
            "name": "tabletGridStyle/columnsNumber",
            "label": "Number of columns, tablet",
            "min": 1,
            "max": 12
          },
          "mobileColumnsNumber": {
            "sling:resourceType": "wcm/dialogs/components/numberfield",
            "name": "mobileGridStyle/columnsNumber",
            "label": "Number of columns, mobile",
            "min": 1,
            "max": 12
          }
        },
        "columnGap": {
          "sling:resourceType": "wcm/dialogs/components/numberfield",
          "name": "columnGap",
          "label": "Column gap",
          "description": "Gap between columns, rem",
          "min": 0,
          "max": 8,
          "step": 0.5
        },
        "rowGap": {
          "sling:resourceType": "wcm/dialogs/components/numberfield",
          "name": "rowGap",
          "label": "Row gap",
          "description": "Gap between rows, rem",
          "min": 0,
          "max": 8,
          "step": 0.5
        }
      }
    }
  }
}
