{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "imageSrcType": {
        "sling:resourceType": "wcm/dialogs/components/radio",
        "name": "imageSrcType",
        "label": "Source type",
        "asset": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "Asset",
          "value": "asset"
        },
        "link": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "Link",
          "value": "link"
        }
      },
      "assetImages": {
        "sling:resourceType": "wcm/dialogs/components/multifield",
        "name": "images",
        "label": "Images",
        "srcReference": {
          "sling:resourceType": "wcm/dialogs/components/assetreference",
          "mimeTypes": [
            "image/*"
          ],
          "name": "src",
          "description": "Default image source",
          "label": "Choose image"
        },
        "alt": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "alt",
          "label": "Alt text"
        },
        "ws:display": {
          "condition": {
            "sourceName": "imageSrcType",
            "values": "asset"
          }
        }
      },
      "linkImages": {
        "sling:resourceType": "wcm/dialogs/components/multifield",
        "name": "images",
        "label": "Images",
        "srcLink": {
          "sling:resourceType": "wcm/dialogs/components/pathpicker",
          "name": "src",
          "label": "Choose image"
        },
        "alt": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "alt",
          "label": "Alt text"
        },
        "ws:display": {
          "condition": {
            "sourceName": "imageSrcType",
            "values": "link"
          }
        }
      }
    }
  }
}