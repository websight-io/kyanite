{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "imageSource": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "include": {
          "sling:resourceSuperType": "kyanite/common/components/common/imagesource",
          "assetReference": {
            "mimeTypes": ["image/*", "video/*"]
          }
        }
      },
      "alt": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "alt",
        "label": "Alt text"
      },
      "width": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "width",
        "label": "Width"
      },
      "height": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "height",
        "label": "Height"
      },
      "hasVideoOptions": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "hasVideoOptions",
        "label": "Video options"
      },
      "isCodeSvg": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isCodeSvg",
        "label": "SVG as a code",
        "description": "SVG image will be inserted as a code instead of link reference"
      },
      "videoOptions": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "customThumbnail": {
          "sling:resourceType": "wcm/dialogs/components/assetreference",
          "rootPath": "/content",
          "mimeTypes": [
            "image/*"
          ],
          "name": "thumbnail",
          "description": "Choose a Thumbnail",
          "label": "Thumbnail"
        },
        "autoplay": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "description": "This function works when isMuted property is disabled",
          "name": "autoplay",
          "label": "Autoplay"
        },
        "loop": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "isLooped",
          "label": "Loop"
        },
        "muted": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "isMuted",
          "checkedByDefault": true,
          "label": "Muted"
        },
        "controls": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "hasControls",
          "label": "Controls"
        },
        "ws:display": {"condition": {
          "sourceName": "hasVideoOptions",
          "values": true
        }}
      }
    },
    "styleTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Style of image",
      "size": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "kyanite/common/components/image/attributes/size"
      },
      "isRounded": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isRounded",
        "checkedByDefault": false,
        "label": "Rounded"
      },
      "hasShadow": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "hasShadow",
        "label": "Has shadow"
      }
    },
    "mediaTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Media",
      "viewports": {
        "sling:resourceType": "wcm/dialogs/components/tabs",
        "mobile": {
          "sling:resourceType": "wcm/dialogs/components/tab",
          "label": "Mobile",
          "imageSource": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "kyanite/common/components/common/imagesource",
              "imageSrcType": {
                "name": "mobileImageSrcType"
              },
              "assetReference": {
                "name": "mobileAssetReference",
                "mimeTypes": ["image/*", "video/*"],
                "ws:display": {
                  "condition": {
                    "sourceName": "mobileImageSrcType",
                    "values": "asset"
                  }
                }
              },
              "src": {
                "name": "mobileAssetReference",
                "ws:display": {
                  "condition": {
                    "sourceName": "mobileImageSrcType",
                    "values": "link"
                  }
                }
              }
            }
          }
        },
        "tablet": {
          "sling:resourceType": "wcm/dialogs/components/tab",
          "label": "Tablet",
          "imageSource": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "kyanite/common/components/common/imagesource",
              "imageSrcType": {
                "name": "tabletImageSrcType"
              },
              "assetReference": {
                "name": "tabletAssetReference",
                "mimeTypes": ["image/*", "video/*"],
                "ws:display": {
                  "condition": {
                    "sourceName": "tabletImageSrcType",
                    "values": "asset"
                  }
                }
              },
              "src": {
                "name": "tabletAssetReference",
                "ws:display": {
                  "condition": {
                    "sourceName": "tabletImageSrcType",
                    "values": "link"
                  }
                }
              }
            }
          }
        }
      }
    },
    "actionTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Action",
      "container": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "url": {
          "sling:resourceType": "wcm/dialogs/components/pathpicker",
          "rootPath": "/content",
          "name": "url",
          "label": "URL"
        },
        "openInNewTab": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "openInNewTab",
          "label": "Open link in a new tab"
        }
      }
    }
  }
}
