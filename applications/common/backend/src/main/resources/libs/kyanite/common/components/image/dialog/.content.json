{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "imageSource": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "include": {
          "sling:resourceSuperType": "kyanite/common/components/common/imagesource",
          "assetReference": {
            "mimeTypes": ["image/*", "video/*"]
          }
        }
      },
      "alt": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "alt",
        "label": "Alt text"
      },
      "hasVideoOptions": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "hasVideoOptions",
        "label": "Video options"
      },
      "videoOptions": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "width": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "width",
          "label": "Player width"
        },
        "height": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "height",
          "label": "Player height"
        },
        "customThumbnail": {
          "sling:resourceType": "wcm/dialogs/components/assetreference",
          "rootPath": "/content",
          "mimeTypes": [
            "image/*"
          ],
          "name": "thumbnail",
          "description": "Choose a Thumbnail",
          "label": "Thumbnail"
        },
        "autoplay": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "description": "This function works when isMuted property is disabled",
          "name": "autoplay",
          "label": "Autoplay"
        },
        "loop": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "isLooped",
          "label": "Loop"
        },
        "muted": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "isMuted",
          "checkedByDefault": true,
          "label": "Muted"
        },
        "controls": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "hasControls",
          "label": "Controls"
        },
        "ws:display": {"condition": {
          "sourceName": "hasVideoOptions",
          "values": true
        }}
      }
    },
    "styleTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Style of image",
      "type": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/libs/kyanite/common/components/image/attributes/type"
      },
      "ratio": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "style": {
          "sling:resourceType": "wcm/dialogs/components/include",
          "path": "/libs/kyanite/common/components/image/attributes/ratio"
        },
        "ws:display": {"condition": {
          "sourceName": "type",
          "values": "ratio"
        }}
      },
      "fixed": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "style": {
          "sling:resourceType": "wcm/dialogs/components/include",
          "path": "/libs/kyanite/common/components/image/attributes/fixed"
        },
        "ws:display": {"condition": {
          "sourceName": "type",
          "values": "fixed"
        }}
      },
      "isRounded": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isRounded",
        "checkedByDefault": false,
        "label": "Rounded"
      },
      "hasShadow": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "hasShadow",
        "label": "Has shadow"
      }
    }
  }
}