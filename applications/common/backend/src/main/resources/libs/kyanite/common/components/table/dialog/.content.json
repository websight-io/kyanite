{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "isBordered": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "isBordered",
        "label": "Bordered cells",
        "description": "Add borders to all the cells"
      },
      "isStriped": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "isStriped",
        "label": "Striped table",
        "description": "Add stripes to the table"
      },
      "isNarrow": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "isNarrow",
        "label": "Narrow cells",
        "description": "Make the cells narrower"
      },
      "isHoverable": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "isHoverable",
        "label": "Hover effect",
        "description": "Add hover effect on each row"
      },
      "isFullwidth": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "isFullwidth",
        "label": "Fullwidth table"
      },
      "isScrollable": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "isScrollable",
        "label": "Scrollable table",
        "description": "Make the table scrollable"
      },
      "isFirstColumnLocked": {
        "sling:resourceType": "wcm/dialogs/components/checkbox",
        "name": "isFirstColumnLocked",
        "label": "Lock first column for scrolling (only tablet and up)",
        "description": "When table gets horizontal scroll, the first column will be locked and its width will be fixed."
      }
    }
  }
}