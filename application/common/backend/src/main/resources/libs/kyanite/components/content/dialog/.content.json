{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "dialogText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "text",
        "label": "Text",
        "ws:disallowedContext": ["edit:panel"],
        "configuration": "kyanite/components/common/rte/configurations/default"
      },
      "panelText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "text",
        "label": "Text",
        "ws:disallowedContext": ["edit:dialog"],
        "configuration": "kyanite/components/common/rte/configurations/compact"
      },
      "size": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "kyanite/components/common/size"
      },
      "textweight": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "kyanite/components/common/textweight"
      },
      "color": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "kyanite/components/common/text/color"
      },
      "shadeContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "blackAndWhiteShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "shade": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "kyanite/components/common/text/shade/bw",
            "namespace": "bw"
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "bw_has-text-white",
                "bw_has-text-black"
              ]
            }
          }
        },
        "greyShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "shade": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "kyanite/components/common/text/shade/grey",
            "include": {
              "sling:resourceSuperType": "kyanite/components/common/text/shade/grey",
              "name": "grey/shade",
              "light": {
                "selected": true
              },
              "dark": {
                "selected": false
              }
            }
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "grey_has-text-link"
              ]
            }
          }
        },
        "restShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "shade": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "kyanite/components/common/text/shade/rest",
            "include": {
              "sling:resourceSuperType": "kyanite/components/common/text/shade/rest",
              "name": "rest/shade",
              "dark": {
                "selected": true
              },
              "900": {
                "selected": false
              }
            }
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "rest_has-text-primary",
                "rest_has-text-grey",
                "rest_has-text-info",
                "rest_has-text-success",
                "rest_has-text-warning",
                "rest_has-text-danger"
              ]
            }
          }
        },
        "ws:display": {
          "condition": {
            "sourceName": "color",
            "values": [
              "bw_has-text-white",
              "bw_has-text-black",
              "grey_has-text-link",
              "rest_has-text-primary",
              "rest_has-text-grey",
              "rest_has-text-info",
              "rest_has-text-success",
              "rest_has-text-warning",
              "rest_has-text-danger"
            ]
          }
        }
      }
    }
  }
}
