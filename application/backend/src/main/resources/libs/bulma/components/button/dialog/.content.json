{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "labelText": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "label",
        "label": "Label"
      },
      "type": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/libs/bulma/components/button/attributes/type"
      },
      "container": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "url": {
          "sling:resourceType": "wcm/dialogs/components/pathpicker",
          "rootPath": "/content",
          "name": "url",
          "label": "URL"
        },
        "openInNewTab": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "openInNewTab",
          "label": "Open link in a new tab"
        },
        "ws:display": {
          "condition": {
            "sourceName": "type",
            "values": "a"
          }
        }
      },
      "size": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/libs/bulma/components/common/size"
      },
      "variant": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/libs/bulma/components/button/attributes/variant"
      }
    },
    "modifiers": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Modifiers",
      "isLight": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isLight",
        "label": "Light"
      },
      "isOutlined": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isOutlined",
        "label": "Outlined"
      },
      "isRounded": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isRounded",
        "label": "Rounded"
      },
      "isInverted": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isInverted",
        "label": "Inverted"
      },
      "isFullWidth": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isFullWidth",
        "label": "Full width"
      },
      "isDisabled": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isDisabled",
        "label": "Disabled",
        "ws:display": {
          "condition": {
            "sourceName": "type",
            "values": "button"
          }
        }
      }
    },
    "icon": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Icon",
      "addIcon": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "addIcon",
        "label": "Add icon?"
      },
      "iconContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "iconLibType": {
          "sling:resourceType": "wcm/dialogs/components/include",
          "path": "bulma/components/common/icon/libs"
        },
        "selectOrType": {
          "sling:resourceType": "wcm/dialogs/components/radio",
          "name": "selectOrType",
          "label": "Select icon or type it",
          "required": true,
          "select": {
            "sling:resourceType": "wcm/dialogs/components/radio/option",
            "label": "Select it",
            "value": "select",
            "selected": true
          },
          "type": {
            "sling:resourceType": "wcm/dialogs/components/radio/option",
            "label": "Type it",
            "value": "type"
          }
        },
        "typedIcon": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "icon",
          "label": "Name of the icon",
          "ws:display": {
            "condition": {
              "sourceName": "selectOrType",
              "values": "type"
            }
          }
        },
        "iconFA": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "selectableIcon": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "bulma/components/common/icon/icons/fontawesome",
            "ws:display": {
              "condition": {
                "sourceName": "selectOrType",
                "values": "select"
              }
            }
          },
          "iconSize": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "bulma/components/common/icon/iconsize/fontawesome"
          },
          "ws:display": {
            "condition": {
              "sourceName": "iconLibType",
              "values": "fas"
            }
          }
        },
        "iconMD": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "selectableIcon": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "bulma/components/common/icon/icons/materialdesign",
            "ws:display": {
              "condition": {
                "sourceName": "selectOrType",
                "values": "select"
              }
            }
          },
          "iconSize": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "bulma/components/common/icon/iconsize/materialdesign"
          },
          "ws:display": {
            "condition": {
              "sourceName": "iconLibType",
              "values": "mdi"
            }
          }
        },
        "iconLibTypeRight": {
          "sling:resourceType": "wcm/dialogs/components/include",
          "include": {
            "sling:resourceSuperType": "bulma/components/common/icon/libs",
            "name": "iconLibTypeRight"
          }
        },
        "selectOrTypeRight": {
          "sling:resourceType": "wcm/dialogs/components/radio",
          "name": "selectOrTypeRight",
          "label": "Select icon or type it",
          "required": true,
          "select": {
            "sling:resourceType": "wcm/dialogs/components/radio/option",
            "label": "Select it",
            "value": "select",
            "selected": true
          },
          "type": {
            "sling:resourceType": "wcm/dialogs/components/radio/option",
            "label": "Type it",
            "value": "type"
          }
        },
        "typedIconRight": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "iconRight",
          "label": "Name of the icon",
          "ws:display": {
            "condition": {
              "sourceName": "selectOrTypeRight",
              "values": "type"
            }
          }
        },
        "iconFARight": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "selectableIcon": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "bulma/components/common/icon/icons/fontawesome",
              "name": "iconRight"
            },
            "ws:display": {
              "condition": {
                "sourceName": "selectOrTypeRight",
                "values": "select"
              }
            }
          },
          "iconSize": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "bulma/components/common/icon/iconsize/fontawesome",
              "name": "iconSizeRight"
            }
          },
          "ws:display": {
            "condition": {
              "sourceName": "iconLibTypeRight",
              "values": "fas"
            }
          }
        },
        "iconMDRight": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "selectableIcon": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "bulma/components/common/icon/icons/materialdesign",
              "name": "iconRight"
            },
            "ws:display": {
              "condition": {
                "sourceName": "selectOrTypeRight",
                "values": "select"
              }
            }
          },
          "iconSize": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "bulma/components/common/icon/iconsize/materialdesign",
              "name": "iconSizeRight"
            }
          },
          "ws:display": {
            "condition": {
              "sourceName": "iconLibTypeRight",
              "values": "mdi"
            }
          }
        },
        "ws:display": {
          "condition": {
            "sourceName": "addIcon",
            "values": "true"
          }
        }
      }
    },
    "actionTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Action",
      "actionType": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/libs/bulma/components/common/actions"
      },
      "action": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "modalId": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "modalId",
          "label": "Modal ID",
          "description": "Enter the ID of the modal that should be opened by this button"
        },
        "ws:display": {
          "condition": {
            "sourceName": "actionType",
            "values": [
              "open-modal"
            ]
          }
        }
      },
      "ws:display": {
        "condition": {
          "sourceName": "type",
          "values": "button"
        }
      }
    }
  }
}