{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "addIcon": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "addIcon",
        "label": "Add icon?"
      },
      "iconContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "iconLibType": {
          "sling:resourceType": "wcm/dialogs/components/include",
          "path": "bulma/components/common/icon/libs"
        },
        "selectOrType": {
          "sling:resourceType": "wcm/dialogs/components/radio",
          "name": "selectOrType",
          "label": "Select icon or type it",
          "required": true,
          "select": {
            "sling:resourceType": "wcm/dialogs/components/radio/option",
            "label": "Select it",
            "value": "select",
            "selected": true
          },
          "type": {
            "sling:resourceType": "wcm/dialogs/components/radio/option",
            "label": "Type it",
            "value": "type"
          }
        },
        "typedIcon": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "icon",
          "label": "Name of the icon",
          "ws:display": {
            "condition": {
              "sourceName": "selectOrType",
              "values": "type"
            }
          }
        },
        "iconFA": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "selectableIcon": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "bulma/components/common/icon/icons",
            "ws:display": {
              "condition": {
                "sourceName": "selectOrType",
                "values": "select"
              }
            }
          },
          "iconSize": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "bulma/components/common/icon/iconsize/fontawesome"
          },
          "ws:display": {
            "condition": {
              "sourceName": "iconLibType",
              "values": "fas"
            }
          }
        },
        "iconMD": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "selectableIcon": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "bulma/components/common/icon/icons",
            "ws:display": {
              "condition": {
                "sourceName": "selectOrType",
                "values": "select"
              }
            }
          },
          "iconSize": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "bulma/components/common/icon/iconsize/materialdesign"
          },
          "ws:display": {
            "condition": {
              "sourceName": "iconLibType",
              "values": "mdi"
            }
          }
        },
        "ws:display": {
          "condition": {
            "sourceName": "addIcon",
            "values": "true"
          }
        }
      }
    }
  }
}