{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "selectOrType": {
        "sling:resourceType": "wcm/dialogs/components/radio",
        "name": "selectOrType",
        "label": "Select icon or type it",
        "required": true,
        "select": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "Select it",
          "value": "select",
          "selected": true
        },
        "type": {
          "sling:resourceType": "wcm/dialogs/components/radio/option",
          "label": "Type it",
          "value": "type"
        }
      },
      "selectableIcon": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/libs/bulma/components/common/icon",
        "ws:display": {
          "condition": {
            "sourceName": "selectOrType",
            "values": "select"
          }
        }
      },
      "typedIcon": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "icon",
        "label": "Name of the icon from font awesome",
        "ws:display": {
          "condition": {
            "sourceName": "selectOrType",
            "values": "type"
          }
        }
      },
      "textVariant": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "include": {
          "sling:resourceSuperType": "/libs/bulma/components/common/textvariant",
          "label": "Icon color variant"
        }
      },
      "size": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/libs/bulma/components/common/iconsize"
      }
    },
    "textTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Text",
      "addText": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "addText",
        "label": "Add text to the icon",
        "required": true
      },
      "textContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "label": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "label",
          "label": "Text connected to the icon"
        },
        "elementType": {
          "sling:resourceType": "wcm/dialogs/components/radio",
          "name": "elementType",
          "label": "Type of the container when adding text",
          "required": true,
          "select": {
            "sling:resourceType": "wcm/dialogs/components/radio/option",
            "label": "Span",
            "value": "span",
            "selected": true
          },
          "type": {
            "sling:resourceType": "wcm/dialogs/components/radio/option",
            "label": "Div",
            "value": "div"
          }
        },
        "colorOnText": {
          "sling:resourceType": "wcm/dialogs/components/checkbox",
          "name": "colorOnText",
          "label": "Apply same coloring on the text",
          "required": true
        },
        "ws:display": {
          "condition": {
            "sourceName": "addText",
            "values": "true"
          }
        }
      }
    }
  }
}