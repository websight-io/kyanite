{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "text": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "text",
        "label": "Text"
      },
      "size": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/libs/kyanite/components/common/issize"
      },
      "element": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "include": {
          "sling:resourceSuperType": "/libs/kyanite/components/common/headinglevel",
          "name": "element"
        }
      },
      "anchorId": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "anchorId",
        "label": "AnchorId text"
      },
      "color": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "kyanite/components/common/text/color",
        "value": "bw_has-text-black"
      },
      "shadeContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "blackAndWhiteShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "intensity": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "kyanite/components/common/text/shade/bw",
            "namespace": "bw"
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "bw_has-text-black",
                "bw_has-text-white"
              ]
            }
          }
        },
        "greyShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "intensity": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "kyanite/components/common/text/shade/grey",
            "namespace": "grey"
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "grey_has-text-grey"
              ]
            }
          }
        },
        "restShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "intensity": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "kyanite/components/common/text/shade/rest",
            "namespace": "rest"
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "rest_has-text-primary",
                "rest_has-text-link",
                "rest_has-text-info",
                "rest_has-text-success",
                "rest_has-text-warning",
                "rest_has-text-danger"
              ]
            }
          }
        },
        "ws:display": {
          "condition": {
            "sourceName": "color",
            "values": [
              "bw_has-text-black",
              "bw_has-text-white",
              "grey_has-text-grey",
              "rest_has-text-primary",
              "rest_has-text-link",
              "rest_has-text-info",
              "rest_has-text-success",
              "rest_has-text-warning",
              "rest_has-text-danger"
            ]
          }
        }
      },
      "subtitleOptionsContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "addSubtitle": {
          "sling:resourceType": "wcm/dialogs/components/toggle",
          "name": "addSubtitle",
          "label": "Add a subtitle"
        },
        "subtitleContainer": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "subtitle": {
            "sling:resourceType": "wcm/dialogs/components/textfield",
            "name": "subtitle",
            "label": "Subtitle text",
            "description": "A subtitle can be defined if the size of the title is 4 or bigger"
          },
          "subtitleColor": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "include": {
              "sling:resourceSuperType": "kyanite/components/common/text/color",
              "name": "subtitleColor",
              "label": "Subtitle color"
            },
            "value": "bw_has-text-black"
          },
          "subtitleShadeContainerBw": {
            "sling:resourceType": "wcm/dialogs/components/container",
            "subtitleShadeBw": {
              "sling:resourceType": "wcm/dialogs/components/include",
              "include": {
                "sling:resourceSuperType": "kyanite/components/common/text/shade/bw",
                "label": "Subtitle shade",
                "name": "bw/subtitleShade"
              },
              "ws:display": {
                "condition": {
                  "sourceName": "subtitleColor",
                  "values": [
                    "bw_has-text-black",
                    "bw_has-text-white"
                  ]
                }
              }
            },
            "subtitleShadeContainerGrey": {
              "sling:resourceType": "wcm/dialogs/components/container",
              "subtitleShadeGrey": {
                "sling:resourceType": "wcm/dialogs/components/include",
                "include": {
                  "sling:resourceSuperType": "kyanite/components/common/text/shade/grey",
                  "label": "Subtitle shade",
                  "name": "grey/subtitleShade"
                }
              },
              "ws:display": {
                "condition": {
                  "sourceName": "subtitleColor",
                  "values": [
                    "grey_has-text-grey"
                  ]
                }
              }
            },
            "subtitleShadeContainerRest": {
              "sling:resourceType": "wcm/dialogs/components/container",
              "subtitleShadeRest": {
                "sling:resourceType": "wcm/dialogs/components/include",
                "include": {
                  "sling:resourceSuperType": "kyanite/components/common/text/shade/rest",
                  "label": "Subtitle shade",
                  "name": "rest/subtitleShade"
                }
              },
              "ws:display": {
                "condition": {
                  "sourceName": "subtitleColor",
                  "values": [
                    "rest_has-text-primary",
                    "rest_has-text-link",
                    "rest_has-text-info",
                    "rest_has-text-success",
                    "rest_has-text-warning",
                    "rest_has-text-danger"
                  ]
                }
              }
            },
            "ws:display": {
              "condition": {
                "sourceName": "subtitleColor",
                "values": [
                  "bw_has-text-black",
                  "bw_has-text-white",
                  "grey_has-text-grey",
                  "rest_has-text-primary",
                  "rest_has-text-link",
                  "rest_has-text-info",
                  "rest_has-text-success",
                  "rest_has-text-warning",
                  "rest_has-text-danger"
                ]
              }
            }
          },
          "isSpaced": {
            "sling:resourceType": "wcm/dialogs/components/checkbox",
            "name": "isSpaced",
            "label": "Additional space between the title and subtitle"
          },
          "ws:display": {
            "condition": {
              "sourceName": "addSubtitle",
              "values": "true"
            }
          }
        },
        "ws:display": {
          "condition": {
            "sourceName": "size",
            "values": [
              "is-1",
              "is-2",
              "is-3",
              "is-4"
            ]
          }
        }
      }
    }
  }
}