{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "content": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "content",
        "label": "Content",
        "ws:disallowedContext": ["sidepanel"],
        "required": true
      },
      "size": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/bulma/components/common/size"
      },
      "variant": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/bulma/components/common/variant"
      }
    },
    "modifiers": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Header",
      "showHeader": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "showHeader",
        "checkedByDefault": true,
        "label": "Create header"
      },
      "container": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "header": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "header",
          "label": "Header content"
        },
        "showButton": {
          "sling:resourceType": "wcm/dialogs/components/checkbox",
          "name": "showButton",
          "label": "Has delete button"
        },
        "ws:display": {"condition": {
          "sourceName": "showHeader",
          "values": true
        }}
      }
    }
  }
}
