{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "dialogText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "text",
        "label": "Text",
        "ws:disallowedContext": ["edit:panel"],
        "required": true,
        "configuration": {
          "sling:resourceSuperType": "wcm/dialogs/components/richtext",
          "color": {
            "sling:resourceType": "extensions/dialogs/components/richtext/ui/color",
            "title": "Color picker",
            "icon": "",
            "plugin": {
              "sling:resourceType": "extensions/dialogs/components/richtext/plugin/color",
              "colors": [
                {
                  "name": "has-text-primary",
                  "value": "#00d1b2"
                },
                {
                  "name": "has-text-link",
                  "value": "#485fc7"
                },
                {
                  "name": "has-text-info",
                  "value": "#3e8ed0"
                }
              ]
            },
            "sling:orderBefore": "bulletlist"
          }
        }
      },
      "panelText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "text",
        "label": "Text",
        "ws:disallowedContext": ["edit:dialog"],
        "required": true,
        "configuration": "wcm/dialogs/components/richtext/configurations/compact"
      },
      "size": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/bulma/components/common/size"
      }
    }
  }
}
