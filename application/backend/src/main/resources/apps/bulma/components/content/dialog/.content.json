{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "dialogText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "text",
        "label": "Text",
        "ws:disallowedContext": ["edit:panel"],
        "required": true
      },
      "panelText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "text",
        "label": "Text",
        "ws:disallowedContext": ["edit:dialog"],
        "required": true,
        "configuration": "wcm/dialogs/components/richtext/configurations/compact"
      },
      "size": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/bulma/components/common/size"
      },
      "color": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/bulma/components/common/text/color"
      },
      "shadeContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "blackAndWhiteShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "intensity": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "/apps/bulma/components/common/text/shade/bw"
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "has-text-black",
                "has-text-white"
              ]
            }
          }
        },
        "greyShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "intensity": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "/apps/bulma/components/common/text/shade/grey"
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "has-text-grey"
              ]
            }
          }
        },
        "restShade": {
          "sling:resourceType": "wcm/dialogs/components/container",
          "intensity": {
            "sling:resourceType": "wcm/dialogs/components/include",
            "path": "/apps/bulma/components/common/text/shade/rest"
          },
          "ws:display": {
            "condition": {
              "sourceName": "color",
              "values": [
                "has-text-primary",
                "has-text-link",
                "has-text-info",
                "has-text-success",
                "has-text-warning",
                "has-text-danger"
              ]
            }
          }
        },
        "ws:display": {
          "condition": {
            "sourceName": "color",
            "values": [
              "has-text-black",
              "has-text-white",
              "has-text-grey",
              "has-text-primary",
              "has-text-link",
              "has-text-info",
              "has-text-success",
              "has-text-warning",
              "has-text-danger"
            ]
          }
        }
      }
    }
  }
}
